    <script>
        document.addEventListener('DOMContentLoaded', () => {
            // Main Tab Switching
            const mainTabsContainer = document.getElementById('main-tabs');
            const mainContents = document.querySelectorAll('.tab-content');

            mainTabsContainer.addEventListener('click', (event) => {
                const tab = event.target.closest('.tab-btn');
                if (!tab) return;

                const targetTab = tab.getAttribute('data-tab');

                mainTabsContainer.querySelectorAll('.tab-btn').forEach(t => t.classList.remove('active'));
                tab.classList.add('active');

                mainContents.forEach(content => {
                    if (content.id === targetTab) {
                        content.classList.add('active', 'animate-fade-in');
                    } else {
                        content.classList.remove('active', 'animate-fade-in');
                    }
                });
            });

            // Lemongrass Sub-Tab Switching
            const lemongrassTabsContainer = document.getElementById('lemongrass-sub-tabs');
            const lemongrassContents = document.querySelectorAll('.sub-tab-content');

            lemongrassTabsContainer.addEventListener('click', (event) => {
                const tab = event.target.closest('.sub-tab-btn');
                if (!tab) return;

                const targetSubTab = tab.getAttribute('data-subtab');

                lemongrassTabsContainer.querySelectorAll('.sub-tab-btn').forEach(t => t.classList.remove('active'));
                tab.classList.add('active');

                lemongrassContents.forEach(content => {
                    if (content.id === targetSubTab) {
                        content.classList.add('active', 'animate-fade-in');
                    } else {
                        content.classList.remove('active', 'animate-fade-in');
                    }
                });
            });

            // Chart.js Quota Chart
            const quotaCtx = document.getElementById('quotaChart');
            if (quotaCtx) {
                const quota = 8.6; // Annual Quota in $M
                const attainment = quota * 1.06; // 106% attainment

                new Chart(quotaCtx, {
                    type: 'bar',
                    data: {
                        labels: ['Quota', 'Attainment'],
                        datasets: [{
                            label: 'Performance ($M)',
                            data: [quota, attainment],
                            backgroundColor: [
                                'rgba(156, 163, 175, 0.6)', // Gray-400
                                'rgba(37, 99, 235, 0.6)'    // Blue-600
                            ],
                            borderColor: [
                                'rgba(156, 163, 175, 1)',
                                'rgba(37, 99, 235, 1)'
                            ],
                            borderWidth: 1
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            legend: { display: false },
                            tooltip: {
                                callbacks: {
                                    label: function(context) {
                                        let label = context.dataset.label || '';
                                        if (label) { label += ': '; }
                                        if (context.parsed.y !== null) {
                                            label += '$' + context.parsed.y.toFixed(2) + 'M';
                                        }
                                        return label;
                                    }
                                }
                            }
                        },
                        scales: {
                            y: {
                                beginAtZero: true,
                                ticks: {
                                    callback: function(value) {
                                        return '$' + value + 'M';
                                    }
                                }
                            }
                        }
                    }
                });
            }
        });
    </script>
